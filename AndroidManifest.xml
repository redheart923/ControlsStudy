    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.ui.ListAllActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.example.ui.MainPageLoad"
            android:label="@string/app_name" >
        </activity>
        
        <activity
            android:name="com.example.ui.GridViewSimpleAdapter"
            android:label="@string/app_name" >
        </activity>
        
        <activity
            android:name="com.example.ui.HeadPreferenceActivity"
            android:label="@string/app_name" >
        </activity>
        
    </application>

</manifest>
